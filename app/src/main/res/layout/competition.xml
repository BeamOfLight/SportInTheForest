<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background_portrait_menu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:maxLines="2"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/competitionTitleColor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/llTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lvCompetitionTeamLeft"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/lvCompetitionTeamRight"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btCompetitionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать соревнование" />
            <Button
                android:id="@+id/btInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пригласить" />
            <Button
                android:id="@+id/btTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btAddResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ход" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btCompetitionRestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать заново" />
            <Button
                android:id="@+id/btFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В лес!" />

            <Button
                android:id="@+id/btNextLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Идти дальше" />
        </LinearLayout>
    </RelativeLayout>

        <ListView
            android:id="@+id/lvCompetitionLog"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/titleColor"
            android:textSize="12sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
</LinearLayout>
